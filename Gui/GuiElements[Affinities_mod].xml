    <!-- AffinityGuiElement is mapped with the AffinityMapping of the Faction's MajorPopulation -->

  <AffinityGuiElement Name="AffinityMappingUnitedHissho" PreloadCount="3" >
    <Title>%AffinityUnitedHisshoTitle</Title>
    <Description>%AffinityUnitedHisshoDescription</Description>
    <Icons>
      <Icon Size="Small" Path="HisshoVisualAffinity/HisshoSmall" /> <!--For population icons on planets/systems-->
      <Icon Size="Medium" Path="HisshoVisualAffinity/HisshoMedium" /> <!--For diplomatic icon on home system-->
      <Icon Size="MediumInverted" Path="HisshoVisualAffinity/HisshoMediumInverted" /> 
      <Icon Size="Large" Path="HisshoVisualAffinity/HisshoLarge" /> <!--For the extended population tooltip-->
      <Icon Size="Leader" Path="HisshoVisualAffinity/HisshoLeader" /> <!--Fall when the model fails to load-->
      <Icon Size="Mood" Path="HisshoVisualAffinity/HisshoMood" /> <!--For the population Collection-->
      <Icon Size="SmallExtended" Path="HisshoVisualAffinity/HisshoSmallExtended" /> <!--For notification when meeting the empire--> 
      <Icon Size="MediumExtended" Path="HisshoVisualAffinity/HisshoMediumExtended" /> <!--For notification when meeting the empire-->
      <Icon Size="Loading" Path="HisshoVisualAffinity/HisshoMood" /> <!--Obviously, for the loading screen-->
    </Icons>
    <SymbolString>[hisshos]</SymbolString>
    <Color Red="255" Green="255" Blue="255" Alpha="255" />
    <ModelPath>Prefabs/Gui/AnimatedPortrait/AnimatedPortraitHisshos</ModelPath>
  </AffinityGuiElement>

